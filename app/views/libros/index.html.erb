<%= form_tag(libros_path, :method => "get", id: "search-form") do %>

  <%= label_tag "Titulo" %><br>
  <%= text_field_tag :search_titulo, params[:search_titulo], placeholder: "Buscar " %><br>
  
  <%= label_tag "Autor" %><br>
  <%= text_field_tag :search_autor, params[:search_autor], placeholder: "Buscar " %><br>

  <%= label_tag "ISBN" %><br>
  <%= text_field_tag :search_isbn, params[:search_isbn], placeholder: "Buscar " %>

  <%= submit_tag "Buscar" %>
<% end %>
<% if @libros_busqueda.present? %>
  <div class="page-header">
    <%= link_to new_libro_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Libro
    <% end %>
    <h1>Listing libros</h1>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
              <th>Title</th>
              <th>author</th>
              <th>ISBN</th>
              <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @libros_busqueda) do |libro| %>
              <td><%= libro.titulo %></td>
              <td><%= libro.autor %></td>
              <td><%= libro.ISBN %></td>
              <td><%= link_to 'Show', libro %></td>
          <td><%= link_to 'Edit', edit_libro_path(libro) %></td>
          <td><%= link_to 'Destroy', libro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="page-header">
    <%= link_to new_libro_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Libro
    <% end %>
    <h1>Listing libros</h1>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
              <th>Title</th>
              <th>author</th>
              <th>ISBN</th>
              <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @libros) do |libro| %>
              <td><%= libro.titulo %></td>
              <td><%= libro.autor %></td>
              <td><%= libro.ISBN %></td>
              <td><%= link_to 'Show', libro %></td>
          <td><%= link_to 'Edit', edit_libro_path(libro) %></td>
          <td><%= link_to 'Destroy', libro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
